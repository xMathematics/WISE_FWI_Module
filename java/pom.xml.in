<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ca.wise</groupId>
  <artifactId>fwi</artifactId>
  <packaging>jar</packaging>
  <version>@PROMETHEUS_VERSION@</version>
  <name>FWI</name>
  <url>http://maven.apache.org</url>
  <properties>
  	<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  	<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>
  <repositories>
    <repository>
      <id>github_hss</id>
      <name>Heartland Software GitHub</name>
      <url>https://maven.pkg.github.com/HeartlandSoftware/*</url>
    </repository>
    <repository>
      <id>github</id>
      <name>PSaaS Developers GitHub</name>
      <url>https://maven.pkg.github.com/WISE-Developers/*</url>
    </repository>
  </repositories>
  <distributionManagement>
    <repository>
      <id>github</id>
      <name>GitHub Packages</name>
      <url>https://maven.pkg.github.com/WISE-Developers/WISE_FWI_Module</url>
    </repository>
  </distributionManagement>
  <dependencies>
	<!-- https://mvnrepository.com/artifact/org.junit.jupiter/junit-jupiter-api -->
	<dependency>
		<groupId>org.junit.jupiter</groupId>
		<artifactId>junit-jupiter-api</artifactId>
      <version>5.8.2</version>
		<scope>test</scope>
	</dependency>
    <dependency>
      <groupId>ca.hss</groupId>
      <artifactId>hss-java</artifactId>
      <version>@HSS_JAVA_VERSION@</version>
    </dependency>
    <dependency>
      <groupId>ca.hss.times</groupId>
      <artifactId>wtime</artifactId>
      <version>@WTIME_VERSION@</version>
    </dependency>
  </dependencies>
  
  <build>
    <finalName>FWI</finalName>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.6.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>3.1.1</version>
        <executions>
          <execution>
            <id>copy-dependencies</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/lib</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>false</overWriteSnapshots>
              <overWriteIfNewer>true</overWriteIfNewer>
              <includeScope>compile</includeScope>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
